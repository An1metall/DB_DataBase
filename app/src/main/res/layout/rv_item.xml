<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="purchase"
            type="com.an1metall.gb_a_database.Purchase" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rv_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/rv_item_purchase_description"
            android:text="@{purchase._description}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            tools:text="purchase description" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rvitem_cost_label"
                android:textAllCaps="true"
                android:textColor="@color/colorSecondaryText" />

            <TextView
                android:id="@+id/rv_item_purchase_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:textColor="@color/colorSecondaryText"
                android:text="@{String.valueOf(purchase._cost)}"
                tools:text="10000" />
        </LinearLayout>

    </LinearLayout>

</layout>